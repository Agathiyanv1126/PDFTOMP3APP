<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminUpdates"
    android:background="@color/beige">

    <ImageView
        android:id="@+id/imgLoc"
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:src="@drawable/circle"
        android:layout_marginTop="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddBus"
        android:layout_width="173dp"
        android:layout_height="55dp"
        android:background="@drawable/rectangle"
        android:text="ADD BUS"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/imgLoc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRemoveBus"
        android:layout_width="173dp"
        android:layout_height="55dp"
        android:background="@drawable/rectangle"
        android:text="REMOVE BUS"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/btnAddBus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChangeDetails"
        android:layout_width="173dp"
        android:layout_height="55dp"
        android:background="@drawable/rectangle"
        android:text="CHANGE DETAILS"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/btnRemoveBus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"  />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdateSchedule"
        android:layout_width="173dp"
        android:layout_height="55dp"
        android:background="@drawable/rectangle"
        android:text="UPDATE SCHEDULE"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/btnChangeDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"  />


</androidx.constraintlayout.widget.ConstraintLayout>