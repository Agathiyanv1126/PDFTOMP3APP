<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.Signup"
    android:background="@color/beige">

    <TextView
        android:id="@+id/textView"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:text="Register Now!"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:layout_marginHorizontal="60dp"
        android:paddingHorizontal="20dp"
        android:hint="Enter your name"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <EditText
        android:id="@+id/regnum"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:paddingHorizontal="20dp"
        android:hint="Enter your register number"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintTop_toBottomOf="@id/username"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="60dp"
        android:hint="Enter your password"
        app:layout_constraintTop_toBottomOf="@id/regnum" />

    <EditText
        android:id="@+id/conpass"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="60dp"
        android:hint="Enter your confirm password"
        app:layout_constraintTop_toBottomOf="@id/password" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSignup"
        android:layout_width="108dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/submitbutton"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/conpass" />

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:text="Already have an account? Login"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>