<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.profile.Profile"
    android:background="@color/beige">


    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus Details"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"/>

    <ImageView
        android:id="@+id/imgBus"
        android:layout_width="288dp"
        android:layout_height="187dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/blackbus" />

    <LinearLayout
        android:id="@+id/busNameLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imgBus">
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Bus Name:"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtBusName"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/white"
            android:text=" thiruvallur"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/busNumberLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/busNameLay">
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Bus Number: "
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtBusNumber"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/white"
            android:text=" 1230"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/driverNameLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/busNumberLay">
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Driver Name: "
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtDriverName"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/white"
            android:text="Ramesh"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/driverPhLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/driverNameLay">
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Driver Contact Number: "
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtDriverPh"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/white"
            android:text="9874563201"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homeLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/home"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

