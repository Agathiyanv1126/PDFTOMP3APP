<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".admin.AddBus">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="288dp"
        android:layout_height="187dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blackbus" />

    <EditText
        android:id="@+id/Bname"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/outline"
        android:hint="Enter Bus Name"
        android:padding="10dp"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <EditText
        android:id="@+id/Bnum"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/outline"
        android:hint="Enter Bus Number"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Bname" />

    <EditText
        android:id="@+id/Dname"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/outline"
        android:hint="Enter Driver Name"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Bnum" />

    <EditText
        android:id="@+id/Dnum"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/outline"
        android:hint="Enter Driver Phone Number"
        android:padding="10dp"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintTop_toBottomOf="@+id/Dname" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addbus"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rectangle"
        android:text="add"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintTop_toBottomOf="@id/Dnum"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
